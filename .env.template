# Environment Configuration Template
# Copy this file to .env and customize for your setup

# NAS Configuration
NAS_HOST=ugadmin@***REMOVED***
NAS_SSH_KEY=~/.ssh/id_rsa
DOCKER_CONTEXT=***REMOVED***

# NAS Paths
NAS_DUPLEXER_PATH=/volume1/services/duplexer
NAS_PAPERLESS_PATH=/volume1/services/paperless
INBOX_PATH=${NAS_DUPLEXER_PATH}/inbox
CONSUME_PATH=${NAS_PAPERLESS_PATH}/consume
LOGS_PATH=${NAS_DUPLEXER_PATH}/logs

# Docker Configuration
IMAGE_NAME=duplexer:latest
CONTAINER_NAME=duplexer

# User/Group IDs for volume permissions
USER_ID=1000
GROUP_ID=1000

# Optional: Custom ports or additional settings
# PAPERLESS_PORT=8000
# MONITORING_ENABLED=true
